<odoo>
    <record id="view_claim_closure_reason_form" model="ir.ui.view">
        <field name="name">client.reclamacio.tancament.motiu.form</field>
        <field name="model">client.reclamacio.tancament.motiu</field>
        <field name="arch" type="xml">
            <form string="Closure Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_claim_closure_reason_list" model="ir.ui.view">
        <field name="name">client.reclamacio.tancament.motiu.list</field> 
        <field name="model">client.reclamacio.tancament.motiu</field>
        <field name="arch" type="xml">
            <list string="Closure Reasons">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_customer_claim_closure_reason" model="ir.actions.act_window">
        <field name="name">Motiu de Tancament</field>
        <field name="res_model">client.reclamacio.tancament.motiu</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>