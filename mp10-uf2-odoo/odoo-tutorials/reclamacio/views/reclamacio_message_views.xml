<odoo>
    <record id="view_client_reclamacio_message_tree" model="ir.ui.view">
        <field name="name">client.reclamacio.message.tree</field>
        <field name="model">client.reclamacio.message</field>
        <field name="arch" type="xml">
            <tree>
                <field name="message"/>
                <field name="author_id"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_client_reclamacio_message_form" model="ir.ui.view">
        <field name="name">client.reclamacio.message.form</field>
        <field name="model">client.reclamacio.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="message"/>
                        <field name="author_id"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>